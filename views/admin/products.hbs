<main>
    {{#if products}}
        <div class="grid">
            {{#each products}}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">
                            {{title}}
                        </h1>
                    </header>
                    <div class="card__image" style="text-align:center">
                        <img  style="max-height: 203px; width: auto;" src="{{imageUrl}}" alt="{{title}}">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">${{price}}</h2>
                        <p class="product__description">{{description}}</p>
                    </div>
                    <div class="card__actions">
                        <input type="hidden" value="{{id}}" />
                        <a href="/admin/edit-product/{{id}}" class="btn">Edit</a>
                        <form action="/admin/delete-product/{{id}}" method="POST">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </div>
                </article>
            {{/each}}
        </div>
    {{else}}
        <h1>No Products Found!</h1>
    {{/if}}
</main>
