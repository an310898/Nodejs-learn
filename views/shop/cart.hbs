<main>
        {{#if products}}
            <ul>
                {{#each products}}
                    <li>
                        <p>{{title}} ({{qty}})</p>
                        <form action="/cart-delete-item" method="POST">
                            <input type="hidden" value="{{id}}" name="productId">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <h1>No Products in Cart!</h1>
        {{/if}}
    </main>